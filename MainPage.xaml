<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TECEnrollment.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Velkommen til TEC"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="SeekCourse"
                Text="Søg efter et fag"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked=""
                HorizontalOptions="Center" />
            <Button
                x:Name="SeekTeacher"
                Text="Søg efter en lærer"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked=""
                HorizontalOptions="Center" />
            <Button
                x:Name="SeekStudent"
                Text="Søg efter en elev"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked=""
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
